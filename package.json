{
	"name": "xml-renderer",
	"version": "4.0.0",
	"description": "Render XML to something awesome with this baby",
	"repository": "wvbe/xml-renderer",
	"author": {
		"name": "Wybe Minnebo",
		"email": "wybe@x-54.com",
		"url": "https://github.com/wvbe"
	},
	"license": "MIT",
	"homepage": "https://github.com/wvbe/xml-renderer",
	"keywords": [
		"publish",
		"react",
		"render",
		"xml",
		"xpath",
		"xslt"
	],
	"main": "dist/index.js",
	"module": "dist/xml-renderer-ts.esm.js",
	"typings": "dist/index.d.ts",
	"engines": {
		"node": ">=10"
	},
	"scripts": {
		"build": "tsdx build",
		"lint": "tsdx lint",
		"prepare": "tsdx build && npm run docs",
		"start": "tsdx watch",
		"test": "tsdx test",
		"docs": "typedoc"
	},
	"husky": {
		"hooks": {
			"pre-commit": "tsdx lint && npm run docs && git add docs"
		}
	},
	"prettier": {
		"printWidth": 100,
		"semi": true,
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "none",
		"useTabs": true
	},
	"devDependencies": {
		"@types/react": "^16.9.49",
		"@types/react-test-renderer": "^16.9.3",
		"husky": "^4.3.0",
		"react": "^16.13.1",
		"react-test-renderer": "^16.13.1",
		"slimdom-sax-parser": "^1.3.1",
		"tsdx": "^0.13.3",
		"tslib": "^2.0.1",
		"typedoc": "^0.19.2",
		"typedoc-plugin-markdown": "^3.0.4",
		"typescript": "^4.0.2"
	},
	"dependencies": {
		"fontoxpath": "^3.9.2"
	}
}